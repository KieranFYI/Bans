  <template type="public" title="kieran_bans_edit" version_id="1000030" version_string="1.0.0 Beta"><![CDATA[<xf:breadcrumb href="{{ link('bans') }}">{{ phrase('kieran_bans_bans') }}</xf:breadcrumb>

